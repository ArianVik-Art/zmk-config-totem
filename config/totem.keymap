        number {
            bindings = <
        &kp F9  &kp F10  &kp F11  &kp F12  &kp KP_PLUS     &kp KP_DIVIDE    &kp KP_NUMBER_7  &kp KP_NUMBER_8  &kp KP_NUMBER_9  &trans
        &kp F5  &kp F6   &kp F7   &kp F8   &kp KP_EQUAL    &kp KP_ASTERISK  &kp KP_NUMBER_4  &kp KP_NUMBER_5  &kp KP_NUMBER_6  &trans
